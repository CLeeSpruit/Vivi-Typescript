{
    "name": "@cspruit/vivi",
    "version": "2.8.1",
    "description": "A lightweight component-focused framework",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "npm run flush && webpack-cli",
        "build:stats": "npm run flush && webpack-cli --json > stats.json",
        "flush": "rm -r ./dist || true",
        "nuke": "rm -r ./node_modules",
        "watch": "webpack-cli -w",
        "dist": "npm run build && tsc",
        "test": "jest",
        "prepare": "npm run dist",
        "prepublishOnly": "npm test",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CassandraSpruit/Vivi.git"
    },
    "keywords": [
        "framework",
        "javascript",
        "typescript"
    ],
    "author": "Cassandra Spruit",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/CassandraSpruit/Vivi/issues"
    },
    "homepage": "https://github.com/CassandraSpruit/Vivi#readme",
    "devDependencies": {
        "@types/jest": "^24.0.22",
        "@types/node": "^12.12.6",
        "codecov": "^3.6.1",
        "flyd": "^0.2.8",
        "jest": "^24.9.0",
        "ts-jest": "^24.0.2",
        "ts-loader": "^6.2.1",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "^3.7.2",
        "uuid": "^3.3.3",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10"
    },
    "dependencies": {
        "reflect-metadata": "^0.1.13"
    }
}
