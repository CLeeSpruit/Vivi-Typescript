{
    "name": "@cspruit/vivi",
    "version": "2.9.2",
    "description": "A lightweight component-focused framework",
    "main": "index.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "npm run flush && rollup -c",
        "flush": "rm -r ./dist || true",
        "nuke": "rm -r ./node_modules",
        "test": "jest",
        "prepare": "npm run build",
        "prepublishOnly": "npm test",
        "postversion": "git push && git push --tags",
        "semantic-release": "semantic-release",
        "commit": "git-cz"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CassandraSpruit/Vivi.git"
    },
    "keywords": [
        "framework",
        "javascript",
        "typescript"
    ],
    "author": "Cassandra Spruit",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/CassandraSpruit/Vivi/issues"
    },
    "homepage": "https://github.com/CassandraSpruit/Vivi#readme",
    "devDependencies": {
        "@types/jest": "^24.0.16",
        "@types/node": "^12.6.8",
        "codecov": "^3.6.1",
        "cz-conventional-changelog": "^3.0.2",
        "jest": "^24.8.0",
        "rollup": "^1.27.0",
        "rollup-plugin-typescript2": "^0.25.2",
        "semantic-release": "^15.13.30",
        "shortid": "^2.2.15",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.5.2"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
