{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es6",
        "outDir": "./dist/",
        "baseUrl": "./src/",
        "module":"commonjs",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "removeComments": true,
    },
    "include": [
        "typings.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/__mock__/*",
        "src/**/__spec__/*",
        "src/meta/*"
    ]
}
